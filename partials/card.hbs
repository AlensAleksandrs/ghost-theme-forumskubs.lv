{{!--
Re-usable card for linking to posts
--}}

<article class="{{post_class}}">
    <a href="{{url}}">
        <div class="flex items-center justify-center">
            {{#if feature_image}}
                <div class="w-full aspect-16/10 bg-cover bg-center" style="background-image:url({{feature_image}})"></div>
            {{else}}
                <div class="w-full aspect-16/10 bg-cover bg-center" style="background-image:url({{asset "images/post-background.png"}})"></div>
            {{/if}}
        </div>
        <div>
            <div class="text-center">
                <span class="text-sm"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time><span>&bull;</span> {{reading_time}}</span>
            </div>
            <h2 class="font-bold">{{title}}</h2>
            <p class="line-clamp-4 text-justify">{{excerpt}}</p>
            <p class="underline text-sm">Read more</p>
        </div>
    </a>
</article>
