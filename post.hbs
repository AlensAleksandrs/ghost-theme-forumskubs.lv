{{!< default-shorthand}}

<div class="contained py-8">
    {{#post}}
        {{#if feature_image}}
            <div class="w-full aspect-16/10 mb-8 bg-cover bg-center" style="background-image:url({{feature_image}})"></div>
        {{/if}}

        <h1 class="text-3xl md:text-4xl font-extrabold mb-2">{{title}}</h1>
        <span><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>

        <div class="mt-4">
            {{content}}
        </div>

        <div class="mt-4">
            Raksta autors - {{#foreach authors}}<a href="{{url}}">{{name}}</a>{{/foreach}}
        </div>

        <aside class="gh-readmore hidden">
            <div class="gh-readmore-inner gh-container">
                <div class="gh-readmore-next">
                    {{#next_post}}<a href="{{url}}">{{> "icons/arrow-left"}} <h4>{{title}}</h4></a>{{/next_post}}
                </div>
                <div class="gh-readmore-prev">
                    {{#prev_post}}<a href="{{url}}">
                        <h4>{{title}}</h4> {{> "icons/arrow-right"}}
                    </a>{{/prev_post}}
                </div>
            </div>
        </aside>
    {{/post}}
</div>
